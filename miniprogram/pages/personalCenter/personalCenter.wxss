page {
  width: 100%;
  height: 100%;
  background-color: rgb(251, 247, 247);
}
.personalCenter {
  width: 90%;
  height: 100%;
  background-color: rgb(251, 247, 247);
  position: relative;
  left: 50%;
  transform: translateX(-50%);
}
.userInfo {
  width: 100%;
  height: 340rpx;
  background: linear-gradient(to top, #a9b3b9, #5a7794);
  text-align: center;
  padding-top: 60rpx;
}
.userInfo > image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
  box-shadow: 3rpx 8rpx 8rpx #555555;
}
.userInfo > .userNickName {
  color: #444444;
  font-size: 55rpx;
  font-weight: 700;
  margin-top: 30rpx;
  text-shadow: 3rpx 8rpx 8rpx #555555;
}

.title{
    font-size: 60rpx;
    font-weight: 900;
    color: rgb(221, 97, 97);
    margin-top: 30rpx;
    margin-bottom: 14rpx;
    text-shadow: 5px 3px 3px #ccc;
}