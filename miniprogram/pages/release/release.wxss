page {
  width: 100%;
  height: 100%;
  background-color: rgb(251, 247, 247);
}
.release {
  width: 90%;
  height: 100%;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
}
.top {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
}
.top > .title {
  font-size: 40rpx;
}
.top > button {
  margin-right: 0;
}
textarea {
  width: 100%;
  height: 300rpx;
  border: 4rpx solid #e6e1e1;
  padding: 9rpx 10rpx;
}

/* 图片 */
.image-list {
  display: flex;
  align-items: center;
  width: 100%;
  flex-wrap: wrap;
}
.image-wrap {
  width: 220rpx;
  height: 220rpx;
  position: relative;
  margin: 3rpx;
}

.selectphoto {
  box-sizing: border-box;
  border: 2rpx solid #ccc;
  display: flex;
  align-items: center;
  justify-content: center;
}
.add {
  font-size: 100rpx;
  color: #ccc;
  font-weight: 200;
}
.image {
  width: 100%;
  height: 100%;
}
.icon-delete {
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background-color: #000000;
  opacity: 0.4;
  color: #ffffff;
  text-align: center;
  line-height: 40rpx;
  font-size: 38rpx;
  font-weight: 700;
}
