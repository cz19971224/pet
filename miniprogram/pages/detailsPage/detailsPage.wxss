page {
  width: 100%;
  height: 100%;
  background-color: rgb(251, 247, 247);
}
.detail {
  width: 90%;
  margin: 0 auto;
}
.content {
  width: 100%;
}
.content > image {
  width: 100%;
  border: 3rpx solid #cccccc;
}
.brand-price {
  width: 100%;
  /* height: 80rpx; */
  font-size: 40rpx;
  background-color: red;
  padding: 10rpx 0;
  font-weight: 800;
  display: flex;
  justify-content: space-between;
}
.brand-price > .brand {
  color: rgb(224, 169, 16);
}
.brand-price > .price {
  color: white;
}
.tianMao-name {
  width: 100%;
  /* height: 200rpx; */
  font-size: 42rpx;
  padding: 30rpx 0;
  font-weight: 900;
  line-height: 60rpx;
  background-color: white;
}
.tianMao-name > .tianMao {
  background-color: red;
  border-radius: 12px;
  padding: 6rpx 12rpx;
  color: #ffffff;
  margin-right: 30rpx;
}
.tianMao-name > .name {
  font-size: 40rpx;
}

/* 活动列表 */
.activityList {
  width: 100%;
}
.activityList > view {
  margin-top: 40rpx;
  font-weight: 100;
  font-size: 24rpx;
  background-color: #ffffff;
}
.activityList > view > view {
  display: flex;
  justify-content: space-between;
  margin-top: 14rpx;
  padding: 20rpx 0;
}
.activityList > view > view > .name1 {
  color: #b3acac;
}
.activityList > view > view > .name1 > .name1-2 {
  color: black;
  margin-left: 20rpx;
}

/* 底部服务栏 */
.end {
  width: 90%;
  background-color: #ffffff;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
}
.end > .service {
  display: flex;
  justify-content: space-between;
}
.end > .service > view {
  margin-right: 40rpx;
  text-align: center;
}
.end > .service > view > i {
  font-size: 56rpx;
  display: block;
}
.end > .service > view > text {
  font-size: 30rpx;
  display: block;
}
.end > view > button {
  background: linear-gradient(to right, #f5af19, #f12711);
}

/* 登录框 */
.getUserInfo {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(78, 82, 83, 0.513);
  padding: 400rpx 0;
}