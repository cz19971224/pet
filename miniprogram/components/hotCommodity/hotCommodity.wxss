.hotCommodityList {
  /* width: auto; */
  height: 300rpx;
  display: flex;
  overflow: scroll;
  border: 2rpx solid #e6e6e6;
  padding: 10rpx;
}
.hotGoodsContent {
  width: 330rpx;
  height: 200rpx;
  margin-right: 30rpx;
}
.hotGoodsContent > image {
  width: 200rpx;
  height: 200rpx;
  display: block;
}
.hotGoodsContent > text {
  width: 200rpx;
  height: 40rpx;
  font-size: 30rpx;
  color: #666666;
  margin-bottom: 20rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 1;
-webkit-box-orient: vertical;
}
.hotGoodsContent > view{
  display: flex;
  justify-content: space-between;
}
.hotGoodsContent > view>text{
  font-size: 20rpx;
}
.hotCommodityList>.more{
  display: inline-block;
  width: 200rpx;
  height: 200rpx;
  padding: 1rpx 40rpx;
  background-color: rgb(83, 152, 155);
  color: #FFF;
  line-height: 50rpx;
}